# Google Sheets Configuration
# IMPORTANT: Never commit your .env file or credentials.json to version control!
# Each user must create their own Google Cloud project and service account.
GOOGLE_SHEET_ID=your_google_sheet_id_here
GOOGLE_APPLICATION_CREDENTIALS=./credentials.json
GOOGLE_SHEET_RANGE=Sheet1!A:Z

# Check-in Time Logging
# Set to 'true' or '1' to disable check-in time logging to Google Sheets
# When disabled, only the check-in status (true/false) will be logged
# Default: false (time logging enabled)
DISABLE_CHECKIN_TIME_LOGGING=false

# Apps Script Webhook (optional)
# Provide a deployed Google Apps Script Web App URL to receive notifications
# After each successful check-in, the server will POST { sheetName, rowIndex }
GOOGLE_APPS_SCRIPT_WEBHOOK_URL=

# Server Configuration
PORT=3000 